<nav class="pagination" role="navigation">
    {{#if prev}}
        <a class="newer-posts" href="{{page_url prev}}">&larr; Newer Posts</a>
    {{else}}
    	<span class="newer-posts pagination-none">&larr; Newer Posts</span>
    {{/if}}
    <span class="page-number">Page {{page}} of {{pages}}</span>
    {{#if next}}
        <a class="older-posts" href="{{page_url next}}">Older Posts &rarr;</a>
    {{else}}
    	<span class="older-posts pagination-none">Older Posts &rarr;</span>
    {{/if}}
</nav>